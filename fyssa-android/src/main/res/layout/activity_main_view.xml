<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <!--1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mainView_card_height"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/mainView_movesense_Ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/colorMainViewCardBackground"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movesense"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainView_multiConnection_Ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/colorMainViewCardBackground"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Multi Connection"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"/>

            </LinearLayout>
        </LinearLayout>

        <!--2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mainView_card_height"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/mainView_dfu_Ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/colorMainViewCardBackground"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DFU"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainView_savedData_Ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/colorMainViewCardBackground"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Saved_Data"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"/>

            </LinearLayout>
        </LinearLayout>

        <!--3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mainView_card_height"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/mainView_tests_Ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/colorMainViewCardBackground"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tests"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainView_about_Ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/colorMainViewCardBackground"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"/>

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/mainView_appVersion_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/application_version"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/mainView_libraryVersion_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/library_version"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
